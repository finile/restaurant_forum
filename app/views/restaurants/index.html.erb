
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container"> 
      <a class="navbar-brand" href="#">餐廳評論網</a>
    </div>
  </nav>


 <!-- Page Content -->
  <div class="container">

    <div class="row">
      <ul class="nav nav-pills">
        <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
        <% @categories.each do |category| %>
        <li role="presentation"><%= link_to category.name, category_path(category) %></li>
        <% end %>
      </ul>

    </div>

    <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <a href="#"><%= image_tag restaurant.image, size:"700x400", class: "img-thumbnail" %></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="#"><%= link_to restaurant.name, restaurant_path(restaurant) %></a>
              </h4>
              <h4 class="card-title">
                <a href="#"><%= restaurant.category.name %></a>
              </h4>
                <p class="card-text"><%= truncate(restaurant.description, length: 80) %></p>
            </div>
          </div>
        </div>
        <% end %>
    </div>

    <ul class="pagination justify-content-center">
     <%= paginate @restaurants %>
    </ul>
  </div>

  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
    </div>
  </footer>

</body>